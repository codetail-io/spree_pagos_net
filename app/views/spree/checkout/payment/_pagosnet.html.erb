<%= hidden_field_tag "order_id", @order.id %>
<%= hidden_field_tag "number", @order.number %>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="form-check">
      <label class="form-check-label">
        <%= radio_button_tag "type_pagos_net", 'payment_bank' %> Pago en efectivo
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <%= radio_button_tag "type_pagos_net", "credit_cart" %> Tarjeta de credito
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <%= radio_button_tag "type_pagos_net", 'ebaking' %> E-baking
      </label>
    </div>
    <div class="form-horizontal">
      <div class="form-group">
        <label for="card_name" class="control-label col-md-3"> Nombre a facturar:</label>
        <div class="col-md-9">
          <%= text_field_tag "name_invoice", "", required: true, id: 'card_name', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <label for="nit_ci" class="control-label col-md-3">NIT/CI:</label>
        <div class="col-md-9">
          <%= text_field_tag "ci_invoice", "", required: true, id: 'nit_ci', class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>

</div>
<% if @message_pn %>

  <div class="alert alert-error">
    <%= @message_pn %>
  </div>
<% end %>
